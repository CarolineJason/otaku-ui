{
  "compilerOptions": {
    "outDir": "dist",
    "module": "esnext",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "paths": {
      "@docs/": ["./docs"],
      "@/*": ["./src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "dist",
    "webpack"
  ]
}
