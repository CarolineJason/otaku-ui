{
  "compilerOptions": {
    "outDir": "./dist/docs",
    "module": "esnext",
    "target": "es5",
    "lib": ["esnext", "dom"],
    "sourceMap": true,
    "baseUrl": ".",
    "jsx": "react",
    "allowJs": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "strict": true,
    "noEmit": false,
    "paths": {
      "@docs/": ["./docs"],
      "@/*": ["./src/*"],
      "site-component": ["./src/components"]
    }
  },
  "exclude": [
    "node_modules",
    "build",
    "webpack"
  ]
}
